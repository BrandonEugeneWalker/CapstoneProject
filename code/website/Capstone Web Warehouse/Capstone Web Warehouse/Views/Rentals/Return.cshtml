@model Capstone_Database.Model.ItemRental

@{
    ViewBag.Title = "Ship & Return";
}

@if (Model.status == "WaitingShipment")
{
    <h2>Ship</h2>
}
@if (Model.status == "WaitingReturn")
{
    <h2>Return</h2>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Item Condition</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.itemRentalId)

        <div class="form-group">
            @Html.Label("Condition: ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" id="returnCondition" name="returnCondition">
                    <option>Excellent </option>
                    <option>Good</option>
                    <option>Fair</option>
                    <option>Unusable</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
