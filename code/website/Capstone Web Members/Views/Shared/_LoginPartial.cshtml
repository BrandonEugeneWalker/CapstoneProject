@if (Session["currentMemberId"] != null)
{
    using (Html.BeginForm("LogOff", "Members", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Create", "Members", null, new {id = "registerLink"})</li>
        <li>@Html.ActionLink("Log in", "Login", "Members", null, new {id = "loginLink"})</li>
    </ul>
}