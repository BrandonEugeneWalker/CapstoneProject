@model IEnumerable<Capstone_Database.Model.Member>

@{
    ViewBag.Title = "All Members";
}

<h2>All Members</h2>

<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th>
            Name
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @if (item.isBanned.Equals(1))
            {
                <b style="color: red">Banned</b>
            }
        </td>
        <td>
            @Html.ActionLink("View Profile", "Details", new { memberId = item.memberId })
            @*|
            @Html.ActionLink("Edit", "Edit", new { memberId = item.memberId })*@
        </td>
    </tr>
}

</table>
