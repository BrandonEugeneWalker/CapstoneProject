@model List<Capstone_Database.Model.Product>

@{
    ViewBag.Title = "Media Library";
}

<h2>Media Library</h2>


<div>
    <h4>Media:</h4>
    <hr/>
    <form asp-action="Search">
        <p>
            Name:
            <input type="text" id="nameSearch" name="nameSearch" />    
            Type:
            <input type="radio" , name="type" , value="Book"/> Book 
            <input type="radio" , name="type" , value="Movie"> Movie 
            <input type="radio" , name="type" , value="CD"/> CD 
            <input type="submit" value="Submit"/>
        </p>
    </form>
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Type
            </th>
            <th>

            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.type)
                </td>
                <td>
                    @Html.ActionLink("Order", "OrderProduct", new { item.productId })
                </td>
            </tr>
        }
    </table>

</div>
<p>

</p>